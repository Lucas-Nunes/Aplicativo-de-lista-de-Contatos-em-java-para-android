<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Moldura exterior -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/white" /> <!-- Cor de fundo da moldura -->
            <stroke android:width="2dp"
                android:color="@color/black" /> <!-- Cor da borda -->
            <corners android:radius="8dp" /> <!-- Raio dos cantos da moldura -->
        </shape>
    </item>
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Cor de fundo da moldura -->
            <corners android:radius="8dp" /> <!-- Raio dos cantos -->
        </shape>
    </item>
</layer-list>
